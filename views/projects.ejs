<!DOCTYPE html>
<html lang="en" data-theme="autumn">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects â€¢ Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <main class="container mx-auto p-4">
      <section class="hero bg-base-200 rounded-box">
        <div class="hero-content text-center">
          <div class="max-w-3xl">
            <h1 class="text-5xl font-bold">Projects</h1>
            <p class="pt-6 pb-2">Browse by sector:</p>
            <div class="flex flex-wrap gap-2 justify-center">
              <% sectors.forEach(function(s){ %>
              <a
                class="btn btn-sm btn-accent text-accent-content hover:bg-primary hover:text-primary-content"
                href="/solutions/projects?sector=<%= encodeURIComponent(s.sector_name || '') %>"
                ><%= s.sector_name %></a
              >
              <% }) %>
            </div>
          </div>
        </div>
      </section>

      <section class="mt-8 overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Sector</th>
              <th>Summary</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(function(p){ %>
            <tr>
              <td><%= p.title %></td>
              <td>
                <a
                  class="btn btn-xs bg-neutral text-neutral-content hover:bg-secondary hover:text-secondary-content"
                  href="/solutions/projects?sector=<%= encodeURIComponent(p.sector || '') %>"
                  ><%= p.sector %></a
                >
              </td>
              <td class="max-w-[40ch] whitespace-normal"><%= p.summary_short %></td>
              <td>
                <a class="btn btn-accent btn-sm text-accent-content hover:bg-primary hover:text-primary-content" href="/solutions/projects/<%= p.id %>">details</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </main>
  </body>
</html>
